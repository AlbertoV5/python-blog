---
import TopNav from "../components/navigation/TopNav";
import Footer from "../components/navigation/Footer";
import LeftTOC from '../components/navigation/LeftTOC'
import TopTOC from '../components/navigation/TopTOC';
import { ScrollSpy } from "bootstrap";

const { title, headings } = Astro.props;
---
<!DOCTYPE html>
<html lang="en" data-bs-theme="light">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
		<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js" integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN" crossorigin="anonymous"></script>
	</head>
	<body>
		<TopNav></TopNav>
		<div id="blog-wrapper" class="container-fluid">
			<main id="blog-content" class="row gap-2">
				<LeftTOC
					className="col-3 d-none d-md-block px-4"
					headings={headings}
					client:load
				/>
				<!-- Show on mobile -->
				<div class="col-1 d-md-none"></div> 
				<!-- Adapt -->
				<div class="col-10 col-md-6">
					<TopTOC
						className="col-12 col-md-1 d-md-none"
						headings={headings} 
						client:load
					/>
					<slot></slot>
				</div>
				<!-- Adapt -->
				<div class="col-1 col-md-3"></div> 
			</main>
		</div>
		<Footer></Footer>
	</body>
	<script>
		Array.from(document.getElementsByClassName('astro-code')).map((e) => {
			e.className += ' shadow-sm p-3 border rounded-2 my-4';
		})
		Array.from(document.getElementsByTagName("img")).map((e) => {
			e.className += ' img-fluid py-2 rounded-4';
		})
		Array.from(document.getElementsByTagName("h1")).map((e) => {
			e.className += ' pt-5 pb-3';
		})
		Array.from(document.getElementsByTagName("h2")).map((e) => {
			e.className += ' pt-5 pb-3';
		})
	</script>
</html>