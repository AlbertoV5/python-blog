---
import BlogPost from '../../layouts/BlogPost.astro';
import NavBar from '../../components/NavBar.astro';

let posts = await Astro.glob('../../content/articles/*.md');
let post = posts[0];
---

<BlogPost title="Welcome to Astro.">
	<main class="container" class="bg-dark">
        <NavBar></NavBar>
        <div class="row">
            <post.Content />
        </div>
	</main>
</BlogPost>

<style is:global>
    .astro-code {
        border-radius: 5px;
        padding: 1em;
        margin: 1em;
    }
    p {
        overflow-x: scroll;
    }
</style>